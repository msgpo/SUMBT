# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: SUMBT
    owner: @@OWNER@@
    job-type: train

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: SUMBT
        owner: @@OWNER@@
        job-type: train
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command: ['/bin/sh', '-c', 'k8s/train-job.sh @@cmdline@@']
        resources:
          limits:
            cpu: 16
            memory: 58G
            nvidia.com/gpu: @@GPU@@
          requests:
            cpu: 4
      nodeSelector:
        beta.kubernetes.io/instance-type: @@GPU_TYPE@@
      tolerations:
      - key: nvidia.com/gpu
        operator: Exists
        effect: NoSchedule
